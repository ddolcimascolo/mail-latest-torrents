{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "node": true
  },
  "rules": {
    "indent": ["error", 2, {
      "VariableDeclarator": {
        "var": 2,
        "let": 2,
        "const": 3
      },
      "SwitchCase": 1
    }],
    "strict": "off",
    "one-var": ["error", "always"],
    "object-curly-newline": "off"
  }
}
